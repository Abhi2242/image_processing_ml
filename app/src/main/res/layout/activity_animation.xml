<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DB4D5"
    tools:context=".views.AnimationActivity">

    <ImageView
        android:id="@+id/iv_dummy_face"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/img"
        android:src="@drawable/dummy_face"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/iv_frame"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/img"
        android:src="@drawable/rec_1"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/iv_remove_glass"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/img"
        android:src="@drawable/remove_glasses"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/iv_selfie"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/img"
        android:src="@drawable/selfie_2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_drop_arrow"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/drop_gif"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_start_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tour"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_skip_tour"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_skip_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip Tour"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_start_tour"/>

</androidx.constraintlayout.widget.ConstraintLayout>